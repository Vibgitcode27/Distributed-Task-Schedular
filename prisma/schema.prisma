datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator db {
    provider = "go run github.com/steebchen/prisma-client-go"
}

model Tasks {
    id          String    @id @unique @default(uuid())
    command     String
    scheduledAt DateTime
    pickedAt    DateTime?
    startedAt   DateTime?
    completedAt DateTime?
    failedAt    DateTime?
    fileContent Bytes?
    fileId      String?

    @@index([scheduledAt])
}
